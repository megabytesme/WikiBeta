<Page
    x:Class="App1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:App1"
    
    xmlns:xaml="using:Microsoft.UI.Xaml.Controls"
    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="BetaWiki API" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>

            <Button x:Name="FetchButton"
                    Content="Get a Random Page Title"
                    HorizontalAlignment="Center"
                    Click="FetchButton_Click"
                    Style="{ThemeResource AccentButtonStyle}"/>

            <TextBlock Text="Result:" FontWeight="SemiBold" FontSize="18"/>

            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" MinHeight="100" MaxWidth="500">
                <ScrollViewer>
                    <TextBlock x:Name="ResultTextBlock" 
                               Text="Click the button to fetch data..."
                               TextWrapping="Wrap"
                               FontSize="14"/>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <ProgressRing x:Name="LoadingRing" IsActive="False" Width="80" Height="80"/>

        <xaml:WebView2 x:Name="SilentWebView"
                       Width="1" 
                       Height="1"
                       Opacity="0" />
    </Grid>
</Page>