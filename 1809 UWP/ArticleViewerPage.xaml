<Page
    x:Class="_1809_UWP.ArticleViewerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <ScrollViewer x:Name="ContentScrollViewer" Visibility="Collapsed">
            <StackPanel Padding="24,0">
                <TextBlock x:Name="ArticleTitle" Style="{ThemeResource HeaderTextBlockStyle}" TextWrapping="Wrap" Margin="0,0,0,12"/>
                <RichTextBlock x:Name="ArticleContent" IsTextSelectionEnabled="True"/>
            </StackPanel>
        </ScrollViewer>

        <xaml:WebView2 x:Name="FetchAndVerifyWebView" />

        <Grid x:Name="LoadingOverlay" Background="#4CFFFFFF" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                <ProgressRing IsActive="True" Width="60" Height="60"/>
                <TextBlock x:Name="LoadingText" Text="Loading..." HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>